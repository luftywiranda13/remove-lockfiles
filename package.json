{
  "name": "remove-lockfiles",
  "version": "0.0.0-development",
  "description": "Prevent committing lockfiles",
  "license": "MIT",
  "author": {
    "name": "Lufty Wiranda",
    "email": "lufty.wiranda@gmail.com",
    "url": "https://www.instagram.com/luftywiranda13/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/luftywiranda13/remove-lockfiles.git"
  },
  "engines": {
    "node": ">=4",
    "npm": ">=3"
  },
  "scripts": {
    "commitmsg": "opt --in commit-msg --exec \"validate-commit-msg\"",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "cz": "git-cz",
    "precommit": "node cli.js && opt --in pre-commit --exec \"npm run test\"",
    "pretest": "eslint . --fix",
    "test": "jest --coverage"
  },
  "bin": {
    "remove-lockfiles": "cli.js"
  },
  "files": [
    "cli.js",
    "index.js"
  ],
  "dependencies": {
    "find-up": "2.1.0",
    "shelljs": "0.7.8"
  },
  "devDependencies": {
    "all-contributors-cli": "4.4.0",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "eslint": "4.4.1",
    "eslint-config-bunny": "4.0.2",
    "husky": "0.14.3",
    "jest": "20.0.4",
    "opt-cli": "1.5.1",
    "validate-commit-msg": "2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": [
      "bunny",
      "bunny/recommended"
    ],
    "rules": {
      "no-plusplus": "off",
      "strict": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "keywords": [
    "git",
    "git-hooks",
    "hooks",
    "pre-commit",
    "npm",
    "yarn",
    "developer-experience",
    "workflow",
    "commit",
    "cli",
    "cli-app"
  ]
}
